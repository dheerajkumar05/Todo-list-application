<% content_for :title, "Editing Todo List" %>

<div class="max-w-2xl mx-auto p-8 bg-white shadow-2xl rounded-xl border border-gray-300">
  <h1 class="font-extrabold text-4xl text-gray-900 mb-6 flex items-center space-x-2">
    ✏️ 
    <span class="bg-gradient-to-r from-blue-600 to-purple-600 text-transparent bg-clip-text drop-shadow-md">Editing Todo List</span>
  </h1>

  <div class="p-6 bg-gradient-to-br from-gray-50 to-gray-100 border-l-4 border-blue-500 rounded-lg shadow-lg">
    <%= render "form", todo_list: @todo_list %>
  </div>

  <div class="mt-8 flex flex-wrap gap-4">
    <%= link_to "👁 Show This Todo List", @todo_list, class: "flex-1 sm:flex-none text-center px-6 py-3 rounded-lg bg-blue-500 hover:bg-blue-400 text-white font-bold shadow-lg transition transform hover:scale-105" %>

    <%= link_to "🔙 Back to Todo Lists", todo_lists_path, class: "flex-1 sm:flex-none text-center px-6 py-3 rounded-lg bg-gray-300 hover:bg-gray-400 text-gray-900 font-bold shadow-lg transition transform hover:scale-105" %>
  </div>
</div>
