<%= form_with(model: todo_list, class: "bg-gradient-to-br from-blue-50 to-purple-50 shadow-lg rounded-xl p-8 space-y-6 border border-gray-200") do |form| %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation" class="bg-red-100 text-red-700 p-4 rounded-lg border border-red-300 shadow">
      <h2 class="font-semibold text-lg"><%= pluralize(todo_list.errors.count, "error") %> prevented saving:</h2>
      <ul class="list-disc ml-5 mt-2 text-sm">
        <% todo_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :name, class: "block font-semibold text-purple-700" %>
    <%= form.text_field :name, class: "block w-full px-4 py-2 border-2 rounded-md focus:ring-2 focus:ring-purple-400 focus:border-purple-400 transition #{todo_list.errors[:name].any? ? 'border-red-500' : 'border-gray-300'}" %>
  </div>

  <div class="space-y-2">
    <%= form.label :description, class: "block font-semibold text-purple-700" %>
    <%= form.text_area :description, rows: 4, class: "block w-full px-4 py-2 border-2 rounded-md focus:ring-2 focus:ring-purple-400 focus:border-purple-400 transition #{todo_list.errors[:description].any? ? 'border-red-500' : 'border-gray-300'}" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <div class="space-y-2">
      <%= form.label :priority, class: "block font-semibold text-blue-700" %>
      <%= form.number_field :priority, class: "block w-full px-4 py-2 border-2 rounded-md focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition #{todo_list.errors[:priority].any? ? 'border-red-500' : 'border-gray-300'}" %>
    </div>

    <div class="space-y-2">
      <%= form.label :due_date, class: "block font-semibold text-blue-700" %>
      <%= form.date_field :due_date, class: "block w-full px-4 py-2 border-2 rounded-md focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition #{todo_list.errors[:due_date].any? ? 'border-red-500' : 'border-gray-300'}" %>
    </div>
  </div>

  <div class="space-y-2">
    <%= form.label :status, class: "block font-semibold text-teal-700" %>
    <%= form.select :status, ["pending", "in-progress", "completed"], class: "block w-full px-4 py-2 border-2 rounded-md focus:ring-2 focus:ring-teal-400 focus:border-teal-400 transition #{todo_list.errors[:status].any? ? 'border-red-500' : 'border-gray-300'}" %>
  </div>

  <div class="flex justify-center">
    <%= form.submit "Save Todo", class: "px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-500 hover:from-purple-700 hover:to-blue-600 text-white rounded-lg font-semibold shadow-lg transform hover:scale-105 transition duration-300" %>
  </div>
<% end %>
