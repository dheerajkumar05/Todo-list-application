<% content_for :title, "New Todo List" %>

<div class="md:w-2/3 w-full bg-white shadow-xl rounded-xl p-6">
  <h1 class="font-extrabold text-4xl bg-gradient-to-r from-blue-600 to-purple-600 text-transparent bg-clip-text drop-shadow-lg">
    ➕ New Todo List
  </h1>

  <div class="mt-6">
    <%= render "form", todo_list: @todo_list %>
  </div>

  <div class="mt-6 flex items-center space-x-4">
    <%= link_to "⬅ Back to Todo Lists", todo_lists_path, class: "rounded-md px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold transition transform hover:scale-105 shadow-md" %>
  </div>
</div>
