<% content_for :title, "Todo List Details" %>

<div class="max-w-2xl mx-auto p-8 bg-white shadow-2xl rounded-xl border border-gray-300">
  <% if notice.present? %>
    <p class="py-3 px-5 bg-green-100 border border-green-400 text-green-800 font-medium rounded-lg shadow-md animate-fade-in mb-5" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-extrabold text-4xl text-gray-900 mb-6 flex items-center space-x-2">
    <span>📋</span>
    <span class="bg-gradient-to-r from-blue-600 to-purple-600 text-transparent bg-clip-text drop-shadow-md">Todo List Details</span>
  </h1>

  <div class="p-6 bg-gradient-to-br from-gray-50 to-gray-100 border-l-4 border-blue-500 rounded-lg shadow-lg">
    <%= render @todo_list %>
  </div>

  <div class="mt-8 flex flex-wrap gap-4">
    <%= link_to "✏ Edit", edit_todo_list_path(@todo_list), class: "flex-1 sm:flex-none text-center px-6 py-3 rounded-lg bg-yellow-400 hover:bg-yellow-300 text-gray-800 font-bold shadow-lg transition transform hover:scale-110" %>

    <%= link_to "🔙 Back", todo_lists_path, class: "flex-1 sm:flex-none text-center px-6 py-3 rounded-lg bg-gray-300 hover:bg-gray-400 text-gray-900 font-bold shadow-lg transition transform hover:scale-110" %>

    <%= button_to "🗑 Delete", @todo_list, method: :delete, class: "flex-1 sm:flex-none text-center px-6 py-3 rounded-lg bg-red-600 hover:bg-red-500 text-white font-bold shadow-lg transition transform hover:scale-110", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
